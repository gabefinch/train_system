<div class="row">
  <div class="col-sm-6">
    <h4>Stations</h4>
    <form action= "/add_station" class="form-group" method="post">
      <label for="station_name">Station name:</label>
      <input name="station_name" id="station_name" type="text">
      <button type="submit" class="btn btn-sm btn-primary">Add station</button>
    </form>
    <% @all_stations.each() do |station| %>
      <ul>
        <li><a href="station/<%= station.id() %>"><%= station.name() %></a></li>
      </ul>
    <% end %>
  </div>
  <div class="col-sm-6">
    <h4>Lines</h4>
    <form action= "/add_line" class="form-group" method="post">
      <label for="line_name">Line name:</label>
      <input name="line_name" id="line_name" type="text">
      <button type="submit" class="btn btn-sm btn-primary">Add line</button>
    </form>
    <% @all_lines.each() do |line| %>
    <ul>
      <li><a href="line/<%= line.id() %>"><%= line.name() %></a></li>
    </ul>
    <% end %>
  </div>
</div>
